generato client {
    provider="prisma-client.js"
}

datassource db {
    provider="postgresql"
    url =env("DATABASE_URL")
}

model Tipo{
    id Int @id @default(autoincrement())
    nome String @unique 
    pets Pet[]

    @@map("tipos")

}

model Pet {
    id Int @id @default(autoincrement())
    nome String
    idade Int 
    tamanho String
    descricao String
    imagemUrl String?
    tipoId Int 
    tipo Tipo @relation(fields:[tipoId], reference: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    @@map("pets")
 }